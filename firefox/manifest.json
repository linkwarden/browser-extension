{
  "manifest_version": 2,
  "name": "Linkwarden",
  "description": "The browser extension for Linkwarden.",
  "homepage_url": "https://linkwarden.app/",
  "version": "1.3.3",
  "browser_action": {
    "default_popup": "./index.html",
    "default_icon": {
      "16": "./16.png",
      "32": "./32.png",
      "48": "./48.png",
      "128": "./128.png"
    },
    "default_title": "Linkwarden"
  },
  "options_ui": {
    "page": "./src/pages/Options/options.html",
    "browser_style": false
  },
  "icons": {
    "16": "./16.png",
    "32": "./32.png",
    "48": "./48.png",
    "128": "./128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "bookmarks",
    "contextMenus",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+K"
      }
    }
  },
  "omnibox": {
    "keyword": "lk"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./contentScript.js"
      ],
      "css": [
        "./contentScript.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "jordanlinkwarden@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}